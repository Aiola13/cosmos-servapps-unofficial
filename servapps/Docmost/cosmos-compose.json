{
    "cosmos-installer": {},
    "minVersion": "0.9.0",
    "services": {
        "{ServiceName}": {
            "image": "docmost/docmost:latest",
            "container_name": "{ServiceName}",
            "restart": "unless-stopped",
            "depends_on": [
                "{ServiceName}-db",
                "{ServiceName}-redis"
            ],
            "environment": [
                "APP_URL=https://{Hostnames[0]}",
                "APP_SECRET={RandomSecret}",
                "DATABASE_URL=postgresql://docmost:{DatabasePassword}@{ServiceName}-db:5432/docmost?schema=public",
                "REDIS_URL=redis://{ServiceName}-redis:6379"
            ],
            "labels": {
                "cosmos-force-network-secured": "true",
                "cosmos-auto-update": "true",
                "cosmos-icon": "https://raw.githubusercontent.com/docmost/docmost/main/website/static/img/logo.png"
            },
            "volumes": [{
                "source": "{ServiceName}-data",
                "target": "/app/data/storage",
                "type": "volume"
            }],
            "routes": [{
                "name": "{ServiceName}",
                "description": "Expose {ServiceName} to the web",
                "useHost": true,
                "target": "http://{ServiceName}:3000",
                "mode": "SERVAPP",
                "Timeout": 14400000,
                "ThrottlePerMinute": 12000,
                "BlockCommonBots": true,
                "SmartShield": {
                    "Enabled": true
                }
            }]
        },
        "{ServiceName}-db": {
            "image": "postgres:16-alpine",
            "container_name": "{ServiceName}-db",
            "restart": "unless-stopped",
            "environment": [
                "POSTGRES_DB=docmost",
                "POSTGRES_USER=docmost",
                "POSTGRES_PASSWORD={DatabasePassword}"
            ],
            "labels": {
                "cosmos-force-network-secured": "true",
                "cosmos-auto-update": "true"
            },
            "volumes": [{
                "source": "{ServiceName}-db-data",
                "target": "/var/lib/postgresql/data",
                "type": "volume"
            }]
        },
        "{ServiceName}-redis": {
            "image": "redis:7.2-alpine",
            "container_name": "{ServiceName}-redis",
            "restart": "unless-stopped",
            "labels": {
                "cosmos-force-network-secured": "true",
                "cosmos-auto-update": "true"
            },
            "volumes": [{
                "source": "{ServiceName}-redis-data",
                "target": "/data",
                "type": "volume"
            }]
        }
    }
}