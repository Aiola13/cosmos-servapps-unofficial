{
    "cosmos-installer": {
        "form": [
			{
				"name": "downloadPath",
				"label": "What is the path to your downloads?",
				"initialValue": "/mnt/data/torrent/downloads",
				"type": "text"
			},
			{
				"name": "dataPath",
				"label": "What is the path to store your rutorrent config?",
				"initialValue": "/mnt/data/torrent/data",
				"type": "text"
			}
		]
    },
    "minVersion": "0.9.0",
    "services": {
        "{ServiceName}": {
            "image": "crazymax/rtorrent-rutorrent:latest",
            "container_name": "{ServiceName}",
            "restart": "unless-stopped",
            "environment": [
                "TZ=Europe/Paris",
                "PUID=1000",
                "PGID=1000"
            ],
            "labels": {
                "cosmos-force-network-secured": "true",
                "cosmos-auto-update": "true",
                "cosmos-icon": "https://aiola13.github.io/cosmos-servapps-unofficial/servapps/Rutorrent/icon.png"
            }, 
            "volumes": [
                {
                    "source": "{ServiceName}_passwd",
                    "target": "/passwd",
                    "type": "volume"
                },
                {
                    "source": "{Context.downloadPath}",
                    "target": "/downloads",
                    "type": "bind"
                },
                {
                    "source": "{Context.dataPath}",
                    "target": "/data",
                    "type": "bind"
                }
            ],
            "routes": [{
                "name": "{ServiceName}",
                "description": "Expose {ServiceName} to the web",
                "useHost": true,
                "target": "http://{ServiceName}:8080",
                "mode": "SERVAPP",
                "Timeout": 14400000,
                "ThrottlePerMinute": 12000,
                "BlockCommonBots": true,
                "SmartShield": {
                    "Enabled": true
                }
            }]
        }
    }
}